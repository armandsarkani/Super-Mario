<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/small</item>
        <item name="android:textAppearanceMedium">@style/medium</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/regular</item>
    </style>
    <style name="medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/medium</item>
    </style>

</resources>
